{{{html}}}

<div class="gh-cta-gradient"></div>

<section class="gh-cta">
    {{#has visibility="paid"}}
        <h4 class="gh-cta-title">Este artículo es solo para suscriptores pagos</h4>
    {{/has}}
    {{#has visibility="members"}}
        <h4 class="gh-cta-title">Este artículo es solo para suscriptores</h4>
    {{/has}}
    {{#has visibility="filter"}}
        <h4 class="gh-cta-title">Este artículo es solo para suscriptores de plan {{tiers}}</h4>
    {{/has}}

    <div class="gh-cta-actions">
        {{#if @member}}
            <button class="gh-btn gh-primary-btn" href="#/portal/account/plans" data-portal="account/plans">Cambiar plan</button>
        {{else}}
            <button class="gh-btn gh-primary-btn" href="#/portal/signup" data-portal="signup">Suscribirse ahora</button>
            <span class="gh-cta-link" href="#/portal/signin" data-portal="signin">¿Ya tienes cuenta? Ingresar</span>
        {{/if}}
    </div>
</section>